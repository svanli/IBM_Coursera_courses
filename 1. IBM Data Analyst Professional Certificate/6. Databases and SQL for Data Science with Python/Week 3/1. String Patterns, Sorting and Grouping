1. String Patterns, Sorting and Grouping

1.1 ——————————————————————————————————————————————————————————————————————————————————————————————————————
SELECT 	*
FROM	EMPLOYEES
WHERE	ADDRESS LIKE '%Elgin,IL'

1.2 ——————————————————————————————————————————————————————————————————————————————————————————————————————
SELECT 	F_NAME,
		L_NAME
FROM	EMPLOYEES
WHERE	B_DATE LIKE '197%'

1.3 ——————————————————————————————————————————————————————————————————————————————————————————————————————
SELECT 	F_NAME,
		L_NAME
FROM	EMPLOYEES
WHERE	DEP_ID = 5
		AND
		SALARY BETWEEN 60000 AND 70000

1.4 ——————————————————————————————————————————————————————————————————————————————————————————————————————
SELECT 		F_NAME,
			L_NAME,
			DEP_ID
FROM		EMPLOYEES
ORDER BY	DEP_ID

1.5 ——————————————————————————————————————————————————————————————————————————————————————————————————————
SELECT 		F_NAME,
			L_NAME,
			DEP_ID
FROM		EMPLOYEES
ORDER BY	DEP_ID DESC,
			L_NAME DESC

1.6 ——————————————————————————————————————————————————————————————————————————————————————————————————————
SELECT 		e.F_NAME,
			e.L_NAME,
			d.DEP_NAME
FROM		EMPLOYEES   e
JOIN		DEPARTMENTS d ON e.DEP_ID = d.DEPT_ID_DEP
ORDER BY	d.DEP_NAME, 
			e.L_NAME 	DESC